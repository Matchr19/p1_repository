<launch>

<arg name = "StartRec" default = "false" />

<include 
file = "$(find turtlebot_gazebo)/launch/turtlebot_world.launch">
<arg name = "world_file" value =  "$(find Linefollower)/Maps/lfm1.world"/>
</include>

<!-- Detection node -->
<node pkg="Linefollower" name="detection" type="detect" cwd="node" output="screen">
</node>

<!-- Robot commands node -->
<node pkg="Linefollower" name="Velocity" type="navig" cwd="node" output="screen">
</node>

<node
pkg = "rosbag"
type = "record"
name = "rosbag_record_all"
respawn = "true"
output = "screen"
args = "-a -O BagFile -x /camera/(.*) "
if = "$(arg StartRec)"
/>

</launch>
